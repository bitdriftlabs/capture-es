{
  "name": "@bitdrift/electron",
  "$schema": "../../node_modules/nx/schemas/project-schema.json",
  "sourceRoot": "./packages/electron/src",
  "projectType": "library",
  "publishConfig": {
    "access": "public"
  },
  "targets": {
    "build": {
      "dependsOn": ["^build"],
      "executor": "@nx/rollup:rollup",
      "options": {
        "main": "{projectRoot}/src/index.ts",
        "outputPath": "dist/{projectRoot}",
        "format": ["cjs", "esm"],
        "tsConfig": "{projectRoot}/tsconfig.lib.json",
        "additionalEntryPoints": ["{projectRoot}/src/renderer.ts"],
        "generateExportsField": true,
        "external": ["electron"]
      }
    },
    "test": {
      "dependsOn": [
        {
          "target": "build",
          "projects": "@bitdrift/core"
        }
      ],
      "executor": "@nx/jest:jest",
      "outputs": ["{workspaceRoot}/coverage/{projectRoot}"],
      "options": {
        "jestConfig": "{projectRoot}/jest.config.ts",
        "passWithNoTests": true
      },
      "configurations": {
        "ci": {
          "ci": true,
          "codeCoverage": true
        }
      }
    },
    "prepare-release": {
      "dependsOn": ["build"],
      "executor": "nx:run-commands",
      "options": {
        "commands": [
          "cp {projectRoot}/README.md dist/{projectRoot}/README.md",
          "cp LICENSE dist/{projectRoot}/LICENSE"
        ],
        "parallel": true
      }
    },
    "release": {
      "version": {
        "generatorOptions": {
          "packageRoot": "dist/{projectRoot}",
          "currentVersionResolver": "git-tag"
        }
      }
    }
  }
}
